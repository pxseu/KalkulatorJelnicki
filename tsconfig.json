{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "es2017"
    ],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "baseUrl": "./src",
    "paths": {
      "@pages/*": [
        "pages/*",
        "pages/index.tsx"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@comp/*": [
        "components/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@classes/*": [
        "classes/*"
      ],
      "@actions/*": [
        "store/actions/*"
      ],
      "@reducers/*": [
        "store/reducers/index.ts",
        "store/reducers/*"
      ],
      "@store/*": [
        "store/index.ts",
        "store/*"
      ],
      "@global/*": [
        "global/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": false
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}